{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/methylong/master/assets/schema_input.json",
    "title": "nf-core/methylong pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "group": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Group name must be provided and cannot contain spaces",
                "meta": ["group"]
            },
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "path": {
                "type": "string",
                "format": "uri-reference",
                "exists": true,
                "oneOf": [
                    {
                        "pattern": "^\\S+$",
                        "not": { "pattern": "\\.(bam|pod5)$" }
                    },
                    {
                        "pattern": "^\\S+\\.(bam|pod5)$"
                    }
                ],
                "errorMessage": "path must be presence, cannot contain spaces and must have extension '.bam' or '.pod5' or be a directory path"
            },
            "ref": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.(fa|fasta|fna)(\\.gz)?$",
                "errorMessage": "Reference file cannot contain spaces and must have extension '.fa' , '.fasta' or '.fna'. Compressed files (.gz) are allowed."
            },
            "method": {
                "type": "string",
                "enum": ["ont", "pacbio"],
                "errorMessage": "sequencing method must be specify: 'ont' or 'pacbio'"
            }
        },
        "required": ["group","sample", "path", "ref", "method"]
    }
}
